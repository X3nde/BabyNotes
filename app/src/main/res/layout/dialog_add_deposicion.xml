<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editFechaDeposicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha (dd/mm/aaaa)"
            android:focusable="false"
            android:clickable="true" />

        <EditText
            android:id="@+id/editHoraDeposicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora (hh:mm)"
            android:focusable="false"
            android:clickable="true" />

        <EditText
            android:id="@+id/editColorDeposicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color" />

        <EditText
            android:id="@+id/editTexturaDeposicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Textura" />

        <EditText
            android:id="@+id/editComentariosDeposicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comentarios (opcional)" />

        <Button
            android:id="@+id/btnGuardarDeposicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Guardar" />
    </LinearLayout>
</ScrollView>
